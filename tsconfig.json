{
    "compilerOptions": {
      "target": "es2022",
      "lib": ["es2022", "dom"],
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "checkJs": false
    },
    "include": [
      "./*.ts",
      "./*.js"
    ],
    "exclude": [
      "node_modules",
      "**/*.js"
    ]
  }